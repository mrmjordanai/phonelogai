{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@phonelogai/shared": ["../../packages/shared/dist/src"],
      "@phonelogai/shared/*": ["../../packages/shared/dist/src/*"],
      "@phonelogai/types": ["../../packages/types/dist/src"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}